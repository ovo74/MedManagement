@model IEnumerable<MedManagement.Models.User>

@{
    ViewData["Title"] = "Users Management";
}

<h1 class="my-4">Users Management</h1>

<!-- Kiểm tra nếu danh sách trống -->
@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No users found. Please add a new user.
    </div>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary mx-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger mx-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Nút tạo người dùng mới -->
<a asp-action="Create" class="btn btn-success my-3">Create New User</a>
